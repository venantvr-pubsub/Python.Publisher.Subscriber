# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Universal settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_size = 2

# HTML/CSS files
[*.{html,css,scss,sass}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 0

# Makefile
[Makefile]
indent_style = tab

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_size = 4

# TOML files
[*.toml]
indent_size = 4
